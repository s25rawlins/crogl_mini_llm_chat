# Mini LLM Chat Environment Variables
# Copy this file to .env and update the values

# Required: OpenAI API Key
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-api-key-here

# Required: Database Configuration
DATABASE_URL=postgresql://localhost:5432/mini_llm_chat

# Required: JWT Secret Key (change this in production!)
# Generate with: openssl rand -base64 32
JWT_SECRET_KEY=your-secret-key-change-in-production

# Rate Limiting Configuration
RATE_LIMIT_MAX_CALLS=3
RATE_LIMIT_TIME_WINDOW=60

# Logging Configuration
LOG_LEVEL=INFO

# Optional: Redis Configuration (for caching)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Optional: Redis URL (alternative to individual settings)
# REDIS_URL=redis://localhost:6379/0

# Optional: Authentication Token (saved automatically)
# MINI_LLM_CHAT_TOKEN=
